<Window x:Class="LuxuryCarRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuxuryCarRental"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="770*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <!-- 1) Navigation Tabs -->
            <TabControl x:Name="NavTabs" DockPanel.Dock="Top">
                <TabItem Header="Catalog"/>
                <TabItem Header="Categories"/>
                <TabItem Header="Cart"/>
                <TabItem Header="Checkout"/>
                <TabItem Header="Confirm"/>
                <TabItem Header="Deals"/>
            </TabControl>

            <!-- 2) Content area -->
            <ContentControl x:Name="ContentArea"/>
        </DockPanel>
    </Grid>
</Window>
